<div id="<%= dom_id task %>">
  <p>
    <strong>Username:</strong>
    <%= task.user.username %>
  </p>

  <p>
    <strong>Task owner name:</strong>
    <%= task.project.name %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= task.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>

  <p>
    <strong>Completed:</strong>
    <%= task.completed %>
  </p>

</div>
