<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "username " %>
    <div>
      <%= form.select :user_id, options_from_collection_for_select(@users, 'id', 'username') %>
    </div>
  </div>

  <div>
    <%= form.label "project owner " %>
    <div>
      <%= form.select :project_id, options_from_collection_for_select(@projects, 'id', 'name') %>
    </div>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.textarea :description %>
  </div>

  <div>
    <%= form.label :completed, style: "display: block" %>
    <%= form.number_field :completed %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
